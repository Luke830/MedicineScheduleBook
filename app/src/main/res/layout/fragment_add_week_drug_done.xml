<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/day_title_height"
                android:background="@android:color/black"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:text="주사제"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="항류마티스약"
                            android:textColor="@android:color/black"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <CheckedTextView
                            android:id="@+id/done_drug1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/list_selector3"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="center"
                            android:text="메토트랙세이트"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="17dp" />


                        <CheckedTextView
                            android:id="@+id/done_drug2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/list_selector3"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="center"
                            android:text="엔브렐"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="17dp" />


                        <CheckedTextView
                            android:id="@+id/done_drug3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/list_selector3"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="center"
                            android:text="휴미라"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="17dp" />


                        <CheckedTextView
                            android:id="@+id/done_drug4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/list_selector3"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="center"
                            android:text="심포니"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="17dp" />


                        <CheckedTextView
                            android:id="@+id/done_drug5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/list_selector3"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="center"
                            android:text="오렌시아"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="17dp" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@android:color/white">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckedTextView
                    android:id="@+id/done_drug6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/list_selector3"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center"
                    android:text="골다공증약"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </TextView>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/day_title_height"
                android:layout_marginTop="5dp"
                android:background="@android:color/black"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:text="경구투약제"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/darker_gray"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:gravity="center"
                            android:text="항류마티스약"
                            android:textColor="@android:color/black"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <CheckedTextView
                            android:id="@+id/done_drug7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/list_selector3"
                            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                            android:gravity="center"
                            android:text="메토트랙세이트"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="17dp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@android:color/white">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckedTextView
                    android:id="@+id/done_drug8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/list_selector3"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:gravity="center"
                    android:text="골다공증약"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                </TextView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/done_add_week_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="투약 여부 설정 추가"
        android:textStyle="bold" />


</LinearLayout>